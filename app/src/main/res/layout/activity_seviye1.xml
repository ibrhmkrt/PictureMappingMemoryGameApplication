<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seviye1"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hasanfatihkavi.HafizaGelistirmeOyunu.seviye1">

    <GridLayout
        android:id="@+id/cardLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="25dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_below="@+id/tvPuan1"
        android:layout_centerHorizontal="true"></GridLayout>

    <TextView
        android:id="@+id/tvPuan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="98dp"
        android:background="@android:color/holo_blue_bright"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>